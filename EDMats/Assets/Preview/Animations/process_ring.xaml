<Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         Stretch="Uniform"
         Width="1500">
    <Viewbox.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Drawings.xaml" />

                <ResourceDictionary xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
                    <Canvas x:Key="ProcessRing"
                            Width="100"
                            Height="100">
                    </Canvas>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Viewbox.Resources>
    <Viewbox Child="{StaticResource ProcessRing}" />
</Viewbox>