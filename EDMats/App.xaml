<Application x:Class="EDMats.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="Application_Startup"
             xmlns:stores="clr-namespace:EDMats.Stores"
             xmlns:converters="clr-namespace:EDMats.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <stores:NotificationsStore x:Key="NotificationsStore" />
            <stores:CommanderInfoStore x:Key="CommanderInfoStore" />
            <stores:MaterialsGoalStore x:Key="MaterialsGoalStore" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source=".\Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>